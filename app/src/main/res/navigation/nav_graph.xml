<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/GridFragment">

    <fragment
        android:id="@+id/GridFragment"
        android:name="ml.lacmus.app.ui.PhotosGridFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_grid">
        <action
            android:id="@+id/action_GridFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoFragment"
        android:name="ml.lacmus.app.ui.FullScreenPhotoFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_photo" >
        <argument
            android:name="imagePosition"
            app:argType="integer" />
    </fragment>
</navigation>